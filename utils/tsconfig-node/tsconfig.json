{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "~/*": [
        "*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "./**/*.js"
  ]
}
