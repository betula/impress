{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": ".dist",
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@lib/*": [
        "src/lib/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@routers/*": [
        "src/routers/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@app/*": [
        "src/app/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
