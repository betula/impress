{
  "name": "@sonata/api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "rimraf .dist",
    "build": "tsc",
    "start": "npm run clean && npm run build && node .dist/start.js",
    "watch": "npm run clean && npm run build && concurrently -k -p \"[{name}]\" -n \"ts,node\" -c \"magenta,blue\" \"tsc -w\" \"nodemon --delay 100ms --inspect --watch .dist .dist/start.js\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll"
  },
  "dependencies": {
    "express": "^4.17.0",
    "cors": "^2.8.5",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "nanoid": "^2.0.3",
    "dotenv": "^8.0.0",
    "nodemailer": "^6.1.1",
    "mongodb": "^3.2.5",
    "module-alias": "^2.2.0",
    "bind-decorator": "^1.0.11",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/cors": "^2.8.5",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/nanoid": "^2.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/nodemailer": "^6.1.0",
    "@types/mongodb": "^3.1.27",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.7",
    "concurrently": "^4.1.0",
    "rimraf": "^2.6.3",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.4.5"
  },
  "_moduleAliases": {
    "~": ".dist"
  }
}
