{
  "name": "@impress/react",
  "version": "0.0.1",
  "description": "Modular Data-View binding mechanism for React",
  "repository": {
    "url": "https://github.com/betula/impress"
  },
  "source": "./src/index.ts",
  "main": "./release/index.js",
  "types": "./release/index.d.ts",
  "files": [
    "/release",
    "/jest-cleanup-after-each.js",
    "/src",
    "/README.md"
  ],
  "scripts": {
    "build": "npx tsc --build tsconfig.release.json",
    "test": "npx jest --coverage",
    "test-with-coveralls": "npx jest --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "npx eslint ./src --ext ts",
    "clean": "npx rimraf ./release && npx rimraf ./coverage",
    "prepublishOnly": "npm run lint && npm run build && npm run test"
  },
  "keywords": [
    "react store",
    "data view binding"
  ],
  "author": "Viacheslav Bereza <mail@betula.co>",
  "license": "MIT",
  "dependencies": {},
  "peerDependencies": {
    "react": "*",
    "reflect-metadata": "*"
  },
  "devDependencies": {
    "@types/react": "~16.9.17",
    "@types/node": "~13.1.6",
    "@types/jest": "~24.0.25",
    "reflect-metadata": "~0.1.13",
    "react": "~16.12.0",
    "typescript": "~3.7.4",
    "eslint": "~6.8.0",
    "@typescript-eslint/eslint-plugin": "~2.16.0",
    "@typescript-eslint/parser": "~2.16.0",
    "jest": "~24.9.0",
    "ts-jest": "~24.3.0",
    "coveralls": "~3.0.9"
  }
}
