{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./release",
    "removeComments": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "packages/*/node_modules"
  ],
  "include": [
    "packages/**/*.ts",
    "packages/*/*.js",
    "examples/**/*.ts",
    "examples/**/*.tsx",
    "examples/*/*.js",
    "src/**/*",
    "tests/**/*",
    "*.ts",
    "*.js"
  ]
}
